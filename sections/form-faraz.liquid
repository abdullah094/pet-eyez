<div class="form-container">
     <h1>{{ section.settings.form_title }}</h1>
    <p>{{ section.settings.form_description }}</p>
       
      
          {%- form 'contact', class: 'form' , id: 'wholesaleForm' -%}
            <div class="input-group">
                <label for="name">Name of business/contact name (first/last)</label>
                <input type="text" id="name" name="name" required>
            </div>
            <div class="input-group">
                <label for="phone">Phone</label>
                <input type="tel" id="phone" name="phone" required>
            </div>
            <div class="input-group">
                <label for="altPhone">Alternative Phone</label>
                <input type="tel" id="altPhone" name="altPhone">
            </div>
            <div class="input-group">
                <label for="email">Email</label>
                <input type="email" id="email" name="email" required>
            </div>
            <div class="input-group">
                <label for="address">Shipping Address</label>
                <input type="text" id="address" name="address" required>
            </div>
            <div class="input-group half-width">
                <label for="city">City</label>
                <input type="text" id="city" name="city" required>
            </div>
            <div class="input-group half-width">
                <label for="state">State</label>
                <input type="text" id="state" name="state" required>
            </div>
            <div class="input-group half-width">
                <label for="zip">Zip</label>
                <input type="text" id="zip" name="zip" required>
            </div>
            <div class="input-group">
                <button type="submit">Submit</button>
            </div>
          {%- endform -%}
    </div>

<style>
  .form-container {
    max-width: 600px;
    margin: 0 auto;
    padding: 20px;
    background: #f9f9f9;
    border: 1px solid #ccc;
    border-radius: 8px;
}

h1 {
    color: #5e2ced;
}

input[type="text"],
input[type="email"],
input[type="tel"] {
    width: 100%;
    padding: 10px;
    margin-top: 8px;
    margin-bottom: 20px;
    border: 2px solid #f1c40f;
    border-radius: 4px;
}

input.half-width {
    width: 48%;
    display: inline-block;
}

button {
    background-color: #5e2ced;
    color: white;
    border: none;
    padding: 10px 20px;
    text-align: center;
    text-decoration: none;
    display: inline-block;
    font-size: 16px;
    margin: 4px 2px;
    cursor: pointer;
    border-radius: 4px;
}

label {
    display: block;
    font-weight: bold;
}

input-group {
    margin-bottom: 10px;
}
</style



  

{% schema %}
{
  "name": "Wholesale Order Form",
  "settings": [
    {
      "type": "text",
      "id": "form_title",
      "label": "Form Title",
      "default": "Wholesale Order Form"
    },
    {
      "type": "textarea",
      "id": "form_description",
      "label": "Form Description",
      "default": "Please fill in this form and we will contact you with wholesale pricing."
    }
  ],
  "presets": [
    {
      "name": "Wholesale Order Form"
    }
  ]
}
{% endschema %}